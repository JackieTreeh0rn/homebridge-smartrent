{
  "displayName": "SmartRent",
  "name": "@jackietreeh0rn/homebridge-smartrent",
  "version": "1.0.0",
  "description": "Homebridge plugin for SmartRent installations",
  "keywords": [
    "homebridge",
    "homebridge-plugin",
    "hap",
    "homekit",
    "smartrent"
  ],
  "license": "GPL-3.0-or-later",
  "author": "Jared Brown",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JackieTreeh0rn/homebridge-smartrent.git"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "^18.20.4 || ^20.18.0 || ^22.10.0",
    "homebridge": "^1.8.0 || ^2.0.0-beta.0"
  },
  "main": "dist/index.js",
  "files": [
    "src",
    "dist",
    "config.example.json",
    "config.schema.json",
    "CHANGELOG.md",
    "screenshot.png"
  ],
  "scripts": {
    "prettier": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint src/**.ts",
    "lint:fix": "eslint src/**.ts --fix",
    "clean": "rimraf ./dist",
    "compile": "tsc",
    "build": "npm-run-all clean compile",
    "watch": "npm run dev-setup && npm run build && npm link && nodemon",
    "prepublishOnly": "npm-run-all prettier lint build",
    "semantic-release": "cross-env semantic-release --no-ci",
    "release": "npm-run-all build semantic-release",
    "test": "echo \"Error: no test specified\" && exit 0",
    "prepare": "husky",
    "tsc": "tsc --noEmit",
    "dev-setup": "npm run setup-config && npm run setup-log",
    "setup-config": "if [ ! -f ./test/hbConfig/config.json ]; then cp ./test/hbConfig/config-template.json ./test/hbConfig/config.json; fi",
    "setup-log": "touch $(pwd)/test/hbConfig/homebridge.log && sed -i '' \"s|<log_file>|$(pwd)/test/hbConfig/homebridge.log|g\" $(pwd)/test/hbConfig/config.json"
  },
  "dependencies": {
    "@homebridge/plugin-ui-utils": "^2.0.0",
    "axios": "^1.7.9",
    "homebridge-lib": "^7.1.1",
    "jwt-decode": "^4.0.0",
    "otplib": "^12.0.1",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/node": "^22.10.5",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "homebridge": "^2.0.0-beta.29",
    "homebridge-config-ui-x": "^5.0.0-beta.35",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.1",
    "ts-node": "^10.4.0",
    "typescript": "^5.7.2"
  },
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/JackieTreeh0rn/homebridge-smartrent/issues"
  },
  "homepage": "https://github.com/JackieTreeh0rn/homebridge-smartrent#readme"
}
