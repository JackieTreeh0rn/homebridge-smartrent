{
  "pluginAlias": "SmartRent",
  "pluginType": "platform",
  "strictValidation": true,
  "headerDisplay": "Homebridge plugin for SmartRent installations",
  "footerDisplay": "For documentation please see [GitHub](https://github.com/JackieTreeh0rn/homebridge-smartrent)",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "default": "SmartRent",
        "type": "string"
      },
      "email": {
        "title": "Email",
        "type": "string",
        "format": "email",
        "required": true
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true
      },
      "tfaSecret": {
        "title": "Two-factor authentication code",
        "type": "string",
        "required": false,
        "pattern": "^[A-Z0-9]{32}$",
        "minLength": 32,
        "maxLength": 32,
        "description": "If you have enabled two-factor authentication on your SmartRent account, enter the seed secret here."
      },
      "enableLeakSensors": {
        "title": "Enable leak sensors",
        "type": "boolean",
        "required": false,
        "default": true,
        "description": "Uncheck to disable leak sensors."
      },
      "enableThermostats": {
        "title": "Enable thermostats",
        "type": "boolean",
        "required": false,
        "default": true,
        "description": "Uncheck to disable thermostats."
      },
      "enableLocks": {
        "title": "Enable locks",
        "type": "boolean",
        "required": false,
        "default": true,
        "description": "Uncheck to disable locks."
      },
      "enableSwitches": {
        "title": "Enable switches",
        "type": "boolean",
        "required": false,
        "default": true,
        "description": "Uncheck to disable switches."
      },
      "enableSwitchMultiLevels": {
        "title": "Enable switch multi-levels",
        "type": "boolean",
        "required": false,
        "default": true,
        "description": "Uncheck to disable switch multi-levels."
      },
      "unitName": {
        "title": "Unit name",
        "type": "string",
        "required": false,
        "description": "Only necessary if you have multiple units in your SmartRent account. Get the name from the top of the More tab in the SmartRent app."
      },
      "enableAutoLock": {
        "title": "Enable auto locking after a delay from the last unlock",
        "type": "boolean",
        "required": false,
        "default": false,
        "description": "Uncheck to disable auto lock."
      },
      "autoLockDelayInMinutes": {
        "title": "Auto lock delay in minutes",
        "type": "integer",
        "required": false,
        "default": 5,
        "description": "The delay in minutes after the last unlock to automatically lock the door."
      }
    }
  }
}
